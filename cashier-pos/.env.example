# ===========================================
# CASHIER POS - Environment Configuration
# ===========================================

# LOCAL DATABASE (PostgreSQL - Primary)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=retail_local_pos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# CLOUD DATABASE (TiDB - Sync Target)
TIDB_HOST=your_tidb_host
TIDB_PORT=4000
TIDB_USER=your_tidb_user
TIDB_PASSWORD=your_tidb_password
TIDB_DATABASE=retail_cloud_hq

# IDENTITY SERVICE (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_supabase_db_password

# APP CONFIG
NEXT_PUBLIC_APP_NAME=Cashier POS
NEXT_PUBLIC_APP_VERSION=1.0.0
